  "cross_modal_understanding_tests": {
    "text_image_fusion": [
      {
        "id": "multimodal_001",
        "name": "文本图像理解融合",
        "category": "cross_modal_understanding",
        "priority": "high",
        "test_scenario": {
          "description": "用户上传产品图片并询问相关问题",
          "modalities": ["text", "image"],
          "fusion_strategy": "attention_fusion"
        },
        "test_data": {
          "image": {
            "file_path": "test_images/smartphone_product.jpg",
            "format": "JPEG",
            "resolution": "1920x1080",
            "size_mb": 2.5,
            "content_description": "一部黑色智能手机的产品展示图，包含品牌logo、型号信息和主要特征"
          },
          "text_query": "这个手机有什么特色功能？价格大概多少？",
          "context": {
            "user_intent": "product_inquiry",
            "expected_entities": ["brand", "model", "features", "price"],
            "conversation_history": []
          }
        },
        "expected_fusion_output": {
          "image_understanding": {
            "detected_objects": ["smartphone", "brand_logo", "text_overlay"],
            "extracted_text": ["品牌名称", "型号信息", "规格参数"],
            "visual_features": ["color", "design", "size"]
          },
          "text_understanding": {
            "intent": "product_inquiry",
            "entities": ["特色功能", "价格"],
            "question_type": "factual_inquiry"
          },
          "fused_response": {
            "content": "根据图片显示，这是一款[品牌][型号]智能手机，主要特色功能包括[从图片识别的功能]。关于价格信息，我需要查询最新的产品数据库来为您提供准确报价。",
            "confidence_score": 0.85,
            "modality_contributions": {
              "image": 0.6,
              "text": 0.4
            }
          }
        },
        "evaluation_criteria": {
          "image_text_alignment": ">0.8",
          "response_relevance": ">0.85",
          "factual_accuracy": ">0.9",
          "fusion_quality": ">0.8"
        }
      },
      {
        "id": "multimodal_002",
        "name": "图表数据分析",
        "category": "cross_modal_understanding",
        "priority": "high",
        "test_scenario": {
          "description": "用户上传数据图表并询问分析问题",
          "modalities": ["text", "image"],
          "fusion_strategy": "hierarchical_fusion"
        },
        "test_data": {
          "image": {
            "file_path": "test_images/sales_chart.png",
            "format": "PNG",
            "resolution": "1200x800",
            "size_mb": 1.8,
            "content_description": "2024年月度销售额柱状图，显示1-12月的销售数据趋势"
          },
          "text_query": "从这个图表可以看出什么趋势？哪个月份表现最好？",
          "context": {
            "user_intent": "data_analysis",
            "expected_analysis": ["trend_identification", "peak_performance", "insights"]
          }
        },
        "expected_fusion_output": {
          "chart_understanding": {
            "chart_type": "bar_chart",
            "data_extraction": "monthly_sales_values",
            "trend_analysis": "upward_trend_with_seasonal_peaks"
          },
          "analytical_response": {
            "trend_summary": "整体呈上升趋势",
            "peak_month": "12月",
            "insights": ["季节性因素", "增长率分析", "异常值识别"]
          }
        }
      }
    ],
