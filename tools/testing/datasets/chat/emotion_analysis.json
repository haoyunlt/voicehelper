    },
    "frustrated": {
      "label": "沮丧",
      "description": "受挫、无奈、烦躁的情绪",
      "response_strategy": "表示理解，提供简化的解决方案"
    },
    "neutral": {
      "label": "中性",
      "description": "平静、客观、无明显情绪倾向",
      "response_strategy": "专业、直接的回应"
    }
