  "evaluation_metrics": {
    "quality_metrics": {
      "mean_opinion_score": {
        "target": ">4.0",
        "description": "主观音质评分 (1-5分)"
      },
      "intelligibility_score": {
        "target": ">95%",
        "description": "可懂度评分"
      },
      "naturalness_score": {
        "target": ">4.0",
        "description": "自然度评分 (1-5分)"
      }
    },
    "technical_metrics": {
      "synthesis_speed": {
        "target": "<100ms",
        "description": "合成延迟"
      },
      "audio_quality": {
        "sample_rate": "22kHz+",
        "bit_depth": "16bit+",
        "format": "WAV/MP3"
      },
      "file_size": {
        "target": "<1MB/min",
        "description": "音频文件大小"
      }
    },
    "emotion_metrics": {
      "emotion_recognition_accuracy": {
        "target": ">85%",
        "description": "情感表达识别准确率"
      },
      "emotion_intensity": {
        "target": "appropriate",
        "description": "情感强度适当性"
      },
      "emotion_consistency": {
        "target": ">90%",
        "description": "情感表达一致性"
      }
    }
  },
  "test_protocol": {
    "setup": [
      "1. 初始化TTS引擎",
      "2. 加载语音模型和情感模型",
      "3. 设置音频输出参数"
    ],
    "execution": [
      "1. 输入测试文本",
      "2. 指定语音类型和情感",
      "3. 生成音频文件",
      "4. 记录合成时间"
    ],
    "evaluation": [
      "1. 主观听测评估",
      "2. 客观指标计算",
      "3. 情感表达分析",
      "4. 生成评估报告"
    ]
  },
  "subjective_evaluation": {
    "listening_test_setup": {
      "participants": "20-30人",
      "background": "不同年龄、性别、教育背景",
      "environment": "安静环境，使用耳机",
      "duration": "每个样本播放2次"
    },
    "evaluation_criteria": [
      {
        "aspect": "naturalness",
        "question": "这段语音听起来自然吗？",
        "scale": "1-5分 (1=非常不自然, 5=非常自然)"
      },
      {
        "aspect": "intelligibility",
        "question": "这段语音清晰易懂吗？",
        "scale": "1-5分 (1=完全听不懂, 5=完全清楚)"
      },
      {
        "aspect": "emotion_appropriateness",
        "question": "情感表达是否恰当？",
        "scale": "1-5分 (1=完全不合适, 5=非常合适)"
      },
      {
        "aspect": "overall_quality",
        "question": "整体音质如何？",
        "scale": "1-5分 (1=很差, 5=很好)"
      }
    ]
  }
}
