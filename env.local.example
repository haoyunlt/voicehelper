# VoiceHelper AI - 本地开发环境配置
# 复制此文件为 .env.local 并填入实际的API密钥

# ===========================================
# 基础配置
# ===========================================
ENV=development
NODE_ENV=development
FLASK_ENV=development

# ===========================================
# API密钥配置 (必填)
# ===========================================

# OpenAI API配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# 豆包/火山引擎 API配置
ARK_API_KEY=your-ark-api-key-here
ARK_BASE_URL=https://ark.cn-beijing.volces.com/api/v3

# Azure Speech Services (语音服务)
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus

# ===========================================
# 服务端口配置
# ===========================================

# 应用服务端口
FRONTEND_PORT=3000
PORTAL_PORT=3002
GATEWAY_PORT=8080
ALGO_PORT=8000
VOICE_PORT=8001
ADMIN_PORT=5001

# 数据库端口
POSTGRES_PORT=5432
REDIS_PORT=6379
MILVUS_PORT=19530
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# ===========================================
# 数据库配置
# ===========================================

# PostgreSQL配置
POSTGRES_HOST=localhost
POSTGRES_DB=voicehelper
POSTGRES_USER=voicehelper
POSTGRES_PASSWORD=voicehelper123
DATABASE_URL=postgresql://voicehelper:voicehelper123@localhost:5432/voicehelper

# Redis配置
REDIS_HOST=localhost
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379/0

# Neo4j配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j123

# ===========================================
# 安全配置
# ===========================================

# JWT配置
JWT_SECRET=your-jwt-secret-key-change-in-production-environment
JWT_EXPIRES_IN=24h

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:5001

# ===========================================
# 应用配置
# ===========================================

# 前端配置
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_VOICE_WS_URL=ws://localhost:8001
NEXT_PUBLIC_APP_NAME=VoiceHelper AI
NEXT_PUBLIC_APP_VERSION=1.9.0

# 功能开关
ENABLE_VOICE_PROCESSING=true
ENABLE_MULTIMODAL=true
ENABLE_GRAPH_RAG=true
ENABLE_AGENT_REASONING=true
