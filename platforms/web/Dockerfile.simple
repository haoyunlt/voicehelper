FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# 环境变量通过 .env 文件或 docker-compose 环境变量传入
# 包括但不限于：
# NODE_ENV, PORT, HOSTNAME 等

# Start the application in development mode
CMD ["npm", "run", "dev"]
