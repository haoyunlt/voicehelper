# VoiceHelper 环境变量配置示例

# ========== 通用配置 ==========
# 运行环境 (development, staging, production)
ENV=development

# 日志级别 (debug, info, warning, error, critical)
LOG_LEVEL=info

# ========== 后端服务配置 ==========
# 后端服务名称
SERVICE_NAME=voicehelper-backend

# 后端服务地址
HOST=0.0.0.0
PORT=8080

# ========== 算法服务配置 ==========
# 算法服务名称 (用于算法服务)
# SERVICE_NAME=voicehelper-algo

# 算法服务地址 (用于算法服务)
# HOST=0.0.0.0
# PORT=8000

# ========== 日志配置 ==========
# 日志级别 (debug, info, warning, error, critical)
LOG_LEVEL=info

# 日志文件路径 (可选，默认输出到控制台)
LOG_FILE_PATH=/var/log/voicehelper/app.log

# 日志轮转配置
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
LOG_MAX_AGE=30

# 结构化日志格式
LOG_FORMAT=json

# 日志输出目标 (console, file, both)
LOG_OUTPUT=console

# ========== 数据库配置 ==========
# PostgreSQL 配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=voicehelper
POSTGRES_USER=voicehelper
POSTGRES_PASSWORD=your_password_here

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Milvus 向量数据库配置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=

# ========== AI 模型配置 ==========
# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# 本地模型配置
LOCAL_LLM_MODEL_PATH=/path/to/local/model
LOCAL_EMBEDDING_MODEL_PATH=/path/to/embedding/model

# ========== 语音服务配置 ==========
# ASR (语音识别) 配置
ASR_SERVICE_URL=http://localhost:9001
ASR_MODEL_NAME=whisper-large-v3

# TTS (语音合成) 配置
TTS_SERVICE_URL=http://localhost:9002
TTS_MODEL_NAME=edge-tts

# 情感分析配置
EMOTION_SERVICE_URL=http://localhost:9003

# ========== 存储配置 ==========
# 文件存储路径
UPLOAD_PATH=/tmp/voicehelper/uploads
AUDIO_PATH=/tmp/voicehelper/audio
DOCUMENT_PATH=/tmp/voicehelper/documents

# ========== 安全配置 ==========
# JWT 密钥
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# API 密钥
API_KEY=your_api_key_here

# ========== 性能配置 ==========
# 并发配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
STREAM_TIMEOUT=300

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 批处理配置
BATCH_SIZE=10
BATCH_TIMEOUT=5

# ========== 开发配置 ==========
# 调试模式
DEBUG=false

# 热重载
RELOAD=true

# 跨域配置
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*
