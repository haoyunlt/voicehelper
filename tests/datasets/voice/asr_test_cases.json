  "evaluation_metrics": {
    "accuracy_metrics": {
      "word_error_rate": {
        "target": "<5%",
        "description": "词错误率 (WER)"
      },
      "character_error_rate": {
        "target": "<3%",
        "description": "字符错误率 (CER)"
      },
      "sentence_accuracy": {
        "target": ">90%",
        "description": "完整句子识别准确率"
      }
    },
    "performance_metrics": {
      "real_time_factor": {
        "target": "<0.5",
        "description": "实时因子 (RTF)"
      },
      "latency": {
        "target": "<200ms",
        "description": "识别延迟"
      },
      "throughput": {
        "target": ">10 concurrent",
        "description": "并发处理能力"
      }
    },
    "robustness_metrics": {
      "noise_robustness": {
        "target": "<10% degradation",
        "description": "噪音环境下性能下降"
      },
      "accent_adaptation": {
        "target": ">80% accuracy",
        "description": "口音适应能力"
      },
      "domain_adaptation": {
        "target": ">75% accuracy",
        "description": "专业术语识别"
      }
    }
  },
  "test_protocol": {
    "setup": [
      "1. 初始化ASR引擎",
      "2. 加载语言模型和声学模型",
      "3. 设置音频参数"
    ],
    "execution": [
      "1. 播放测试音频文件",
      "2. 实时获取识别结果",
      "3. 记录识别时间和置信度",
      "4. 保存识别文本"
    ],
    "evaluation": [
      "1. 计算WER和CER",
      "2. 分析错误类型",
      "3. 评估不同条件下的性能",
      "4. 生成详细报告"
    ]
  },
